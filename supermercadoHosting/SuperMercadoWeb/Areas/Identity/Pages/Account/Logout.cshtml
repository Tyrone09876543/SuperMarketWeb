@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Click aquí para Cerrar Sesión</button>
            </form>
            <br />
            <a href="/" class="btn btn-primary">Regresar a la pagina Principal</a>
        }
        else
        {
            <p>Usted a Cerrado Sesión.</p>
            <br />
            <a href="/" class="btn btn-primary">Regresar a la pagina Principal</a>
        }
    }
</header>